<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="msn.ratemytextbook.AboutUsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="0dp"
            android:text="Search For Books"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="50dp"
            android:layout_centerHorizontal="true"
            />

        <EditText
            android:id="@+id/new_search"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:hint="Book Information"
            android:gravity="center"
            android:layout_below="@+id/textView11"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_centerHorizontal="true"
            />

        <Spinner
            android:id="@+id/method"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:entries="@array/choices_arrays"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="150dp"
            android:layout_centerHorizontal="true"/>


        <Button
            android:id="@+id/submit_btn_search"
            android:layout_width="100dp"
            android:textSize="14sp"
            android:layout_height="40dp"
            android:layout_below="@+id/new_search_id"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="-40dp"
            android:layout_toRightOf="@+id/Course_spn"
            android:text="Search" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookList_search"/>

    </LinearLayout>

</RelativeLayout>
